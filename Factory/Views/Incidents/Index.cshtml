
@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Incident>;

<h1>Incidents</h1>

@if (@Model.Count == 0)
{
  <h3>No incidents have been added yet</h3>
}
else
{
  @foreach(Incident incident in Model)
  {
    <li>@Html.ActionLink($"{incident.Description}", "Details", new { id = incident.IncidentId }) - @incident.Status</li>
  }
}

<br>
<div id="nav-links">
  <p>@Html.ActionLink("Add new incident", "Create")</p>
</div>